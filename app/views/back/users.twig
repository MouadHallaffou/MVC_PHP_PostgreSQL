{% extends 'templates/layout.twig' %}

{% block content %}
<h2>Liste des Utilisateurs</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Nom d'utilisateur</th>
        <th>Email</th>
    </tr>
    {% for user in users %}
    <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
    </tr>
    {% endfor %}
</table>
<a href="/back/create-user">Ajouter un nouvel utilisateur</a>
{% endblock %}
